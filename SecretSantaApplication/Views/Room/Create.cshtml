@model Room
@{
    ViewData["Title"] = "Create a Room";
}

<div class="text-center">
   <h5 style="text-decoration: underline" class="text-danger">@ViewData["Message"]</h5>
    <h1 class="display-4">Create a Room</h1>
    <form asp-action="Create" asp-controller="Room" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" required="required">
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" required="required">
        </div>

        <div class="form-group">
            <label asp-for="ImageLogoFile"></label>
            <input asp-for="ImageLogoFile" accept="image/*" required="required">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>